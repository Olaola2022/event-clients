{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es5",
			"es6"
		],
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "build/",
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": false,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": false,
		"declaration": true
	},
	"compileOnSave": true,
	"files": [
		"src/index.ts"
	],
	"exclude": [
		"node_modules"
	]
}